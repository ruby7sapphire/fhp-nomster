<div class="nm-section-box nm-width-md">
  <h1 class="mb-4">Edit Your Place</h1>
  <%= simple_form_for @place, wrapper: :horizontal_form do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <div class="form-group mt-4">
      <%= link_to 'Remove Place', place_path(@place), method: :delete,
            data: {confirm: "Are you sure you want to delete the place \"#{@place.name}\"?"},
            class: 'btn btn-outline-danger' %>
      <%= f.submit 'Update', class: 'btn btn-primary float-right' %>
    </div>
  <% end %>
</div>
