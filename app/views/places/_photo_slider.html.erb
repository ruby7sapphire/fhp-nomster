  <i class="nm-slider-fullscreen-toggle fa fa-sort"></i>
  <div class="nm-photo-slider-inner" id="<%= slider_id %>">
    <%= render "#{type}_slider_items" %>
  </div>
</div>

<script>
  jQuery(function() { nm_initSlider('<%= slider_id %>') })
</script>
