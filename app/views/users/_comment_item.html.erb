<div class="nm-user-comment-item-outer col-md-6">
  <h3 class="nm-user-comment-item-place"><%= link_to comment.place.name, place_path(comment.place) %></h3>
  <div class="nm-comment-item">
    <blockquote>
      <% if comment.humanized_rating.present? %>
        <strong class="nm-comment-rating"><%= comment.humanized_rating %></strong>
      <% end %>
      <%= comment.message %>
    </blockquote>
    <p class="nm-comment-email"><%= comment.user.email %></p>
  </div>
</div>
